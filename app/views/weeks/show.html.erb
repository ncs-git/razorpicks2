<%- model_class = Week -%>
<div class="page-header">
  <h1><%=t '.title', :default => Week %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start) %></dt>
      <dd><pre class="prettyprint"><%= @week.start %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end) %></dt>
      <dd><pre class="prettyprint"><%= @week.end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:due_by) %></dt>
      <dd><pre class="prettyprint"><%= @week.due_by %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @week.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current) %></dt>
      <dd><pre class="prettyprint"><%= @week.current %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:completed) %></dt>
      <dd><pre class="prettyprint"><%= @week.completed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:locked) %></dt>
      <dd><pre class="prettyprint"><%= @week.locked %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              weeks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_week_path(@week), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              week_path(@week),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

