<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mascot</th>
      <th>City</th>
      <th>State</th>
      <th>Wins</th>
      <th>Loses</th>
      <th>Url</th>
      <th>Nickname</th>
      <th>Conference</th>
      <th>Pick</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.mascot %></td>
        <td><%= team.city %></td>
        <td><%= team.state %></td>
        <td><%= team.wins %></td>
        <td><%= team.loses %></td>
        <td><%= team.url %></td>
        <td><%= team.nickname %></td>
        <td><%= team.conference %></td>
        <td><%= team.pick %></td>
        <td><%= team.game %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

