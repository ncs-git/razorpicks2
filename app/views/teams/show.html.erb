<%- model_class = Team -%>
<div class="page-header">
  <h1><%=t '.title', :default => Team %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @team.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mascot) %></dt>
      <dd><pre class="prettyprint"><%= @team.mascot %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @team.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @team.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wins) %></dt>
      <dd><pre class="prettyprint"><%= @team.wins %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:loses) %></dt>
      <dd><pre class="prettyprint"><%= @team.loses %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @team.url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nickname) %></dt>
      <dd><pre class="prettyprint"><%= @team.nickname %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teams_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_team_path(@team), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              team_path(@team),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

