<%- model_class = Result -%>
<div class="page-header">
  <h1><%=t '.title', :default => Result %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wins) %></dt>
      <dd><pre class="prettyprint"><%= @result.wins %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:loses) %></dt>
      <dd><pre class="prettyprint"><%= @result.loses %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tiebreak_score) %></dt>
      <dd><pre class="prettyprint"><%= @result.tiebreak_score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              results_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_result_path(@result), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              result_path(@result),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

