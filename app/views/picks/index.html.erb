<h1>Listing picks</h1>

<table>
  <thead>
    <tr>
      <th>Home score</th>
      <th>Away score</th>
      <th>User</th>
      <th>Week</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picks.each do |pick| %>
      <tr>
        <td><%= pick.home_score %></td>
        <td><%= pick.away_score %></td>
        <td><%= pick.user %></td>
        <td><%= pick.week %></td>
        <td><%= pick.game %></td>
        <td><%= link_to 'Show', pick %></td>
        <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
        <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pick', new_pick_path %>
