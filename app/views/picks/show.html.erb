<%- model_class = Pick -%>
<div class="page-header">
  <h1><%=t '.title', :default => Pick %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_score) %></dt>
      <dd><pre class="prettyprint"><%= @pick.home_score %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_score) %></dt>
      <dd><pre class="prettyprint"><%= @pick.away_score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              picks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pick_path(@pick), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pick_path(@pick),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

