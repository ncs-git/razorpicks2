<%- model_class = Season -%>
<div class="page-header">
  <h1><%=t '.title', :default => Season %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @season.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start) %></dt>
      <dd><pre class="prettyprint"><%= @season.start %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end) %></dt>
      <dd><pre class="prettyprint"><%= @season.end %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current) %></dt>
      <dd><pre class="prettyprint"><%= @season.current %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              seasons_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_season_path(@season), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              season_path(@season),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

