<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => Game %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:home_team_id) %></th>
      <th><%= model_class.human_attribute_name(:away_team_id) %></th>
      <th><%= model_class.human_attribute_name(:home_score) %></th>
      <th><%= model_class.human_attribute_name(:away_score) %></th>
      <th><%= model_class.human_attribute_name(:played_on) %></th>
      <th><%= model_class.human_attribute_name(:kickoff) %></th>
      <th><%= model_class.human_attribute_name(:complete) %></th>
      <th><%= model_class.human_attribute_name(:locked) %></th>
      <th><%= model_class.human_attribute_name(:tiebreaker) %></th>
      <th><%= model_class.human_attribute_name(:summary_url) %></th>
      <th><%= model_class.human_attribute_name(:preview_url) %></th>
      <th><%= model_class.human_attribute_name(:line) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:venue) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.home_team_id %></td>
        <td><%= game.away_team_id %></td>
        <td><%= game.home_score %></td>
        <td><%= game.away_score %></td>
        <td><%= game.played_on %></td>
        <td><%= game.kickoff %></td>
        <td><%= game.complete %></td>
        <td><%= game.locked %></td>
        <td><%= game.tiebreaker %></td>
        <td><%= game.summary_url %></td>
        <td><%= game.preview_url %></td>
        <td><%= game.line %></td>
        <td><%= game.name %></td>
        <td><%= game.venue %></td>
        <td><%= game.location %></td>
        <td><%=l game.created_at, format: :long %></td>
        <td>
          <%= link_to game_path(game), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to game_path(game), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_game_path,
            :class => 'btn btn-primary' %>
