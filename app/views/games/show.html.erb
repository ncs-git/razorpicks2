<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => Game %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_team_id) %></dt>
      <dd><pre class="prettyprint"><%= @game.home_team_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_team_id) %></dt>
      <dd><pre class="prettyprint"><%= @game.away_team_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_score) %></dt>
      <dd><pre class="prettyprint"><%= @game.home_score %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_score) %></dt>
      <dd><pre class="prettyprint"><%= @game.away_score %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:played_on) %></dt>
      <dd><pre class="prettyprint"><%= @game.played_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:kickoff) %></dt>
      <dd><pre class="prettyprint"><%= @game.kickoff %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:complete) %></dt>
      <dd><pre class="prettyprint"><%= @game.complete %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:locked) %></dt>
      <dd><pre class="prettyprint"><%= @game.locked %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tiebreaker) %></dt>
      <dd><pre class="prettyprint"><%= @game.tiebreaker %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:summary_url) %></dt>
      <dd><pre class="prettyprint"><%= @game.summary_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:preview_url) %></dt>
      <dd><pre class="prettyprint"><%= @game.preview_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:line) %></dt>
      <dd><pre class="prettyprint"><%= @game.line %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @game.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:venue) %></dt>
      <dd><pre class="prettyprint"><%= @game.venue %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @game.location %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

